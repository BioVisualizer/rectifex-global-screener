{
  "app-id": "com.rectifex.GlobalScreener",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "command": "rectifex-global-screener",
  "modules": [
    {
      "name": "rectifex-global-screener",
      "buildsystem": "simple",
      "build-commands": [
        "pwd && ls -la && ls -la /run/build/rectifex-global-screener || true",
        "python3 -V && python3 -c \"import sys; print(sys.version)\"" ,
        "pip3 install --no-deps --no-build-isolation --prefix=/app --no-index --find-links=/run/build/rectifex-global-screener/vendor -r /run/build/rectifex-global-screener/requirements.txt",
        "mkdir -p /app/rectifex-global-screener",
        "cp -r . /app/rectifex-global-screener",
        "install -Dm755 packaging/flatpak/run-app.sh /app/bin/rectifex-global-screener",
        "install -Dm755 packaging/flatpak/run-cli.sh /app/bin/rectifex-cli",
        "install -Dm755 debug_fetch.py /app/bin/debug_fetch.py",
        "install -Dm644 packaging/flatpak/com.rectifex.GlobalScreener.desktop /app/share/applications/com.rectifex.GlobalScreener.desktop",
        "install -Dm644 packaging/flatpak/assets/com.rectifex.GlobalScreener.png /app/share/icons/hicolor/128x128/apps/com.rectifex.GlobalScreener.png",
        "install -Dm644 app/resources/icons/rectifex-global-screener.png /app/share/icons/hicolor/256x256/apps/com.rectifex.GlobalScreener.png",
        "install -Dm644 packaging/flatpak/com.rectifex.GlobalScreener.metainfo.xml /app/share/metainfo/com.rectifex.GlobalScreener.metainfo.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../..",
          "skip": [
            "venv-flatpak",
            ".git",
            ".flatpak-builder"
          ]
        },
        {
          "type": "dir",
          "path": "vendor",
          "dest": "vendor"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=home",
    "--device=dri"
  ]
}
